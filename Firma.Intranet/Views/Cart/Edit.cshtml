@model Firma.Data.Data.Shop.Cart

@{
    ViewData["Title"] = "Edytuj pozycję w koszyku";
}

<h1>@ViewData["Title"]</h1>

<h4>Edytowana pozycja</h4> @* Można tu dodać np. @Model.Product.Name dla @Model.User.Name *@
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCart" />

            <div class="mb-3">
                <label asp-for="IdUser" class="form-label">Użytkownik</label>
                <select asp-for="IdUser" class="form-select" asp-items="ViewBag.IdUser">
                    <option value="">-- Wybierz użytkownika --</option>
                </select>
                <span asp-validation-for="IdUser" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdProduct" class="form-label">Produkt</label>
                <select asp-for="IdProduct" class="form-select" asp-items="ViewBag.IdProduct">
                    <option value="">-- Wybierz produkt --</option>
                </select>
                <span asp-validation-for="IdProduct" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Zapisz zmiany
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Anuluj
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}