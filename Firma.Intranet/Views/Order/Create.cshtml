@model Firma.Data.Data.Customers.Order
@using Firma.Data.Data.Customers

@{
    ViewData["Title"] = "Utwórz nowe zamówienie";
}

<h1>@ViewData["Title"]</h1>

<h4>Nagłówek zamówienia</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="IdUser" class="form-label">Użytkownik</label>
                <select asp-for="IdUser" class ="form-select" asp-items="ViewBag.IdUser">
                     <option value="">-- Wybierz użytkownika --</option>
                </select>
                <span asp-validation-for="IdUser" class="text-danger"></span>
            </div>

            @* OrderDate ma wartość domyślną, ale da sie edytować*@
             <div class="mb-3">
                <label asp-for="OrderDate" class="form-label"></label>
                <input asp-for="OrderDate" class="form-control" type="datetime-local" />
                 <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<OrderStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Utwórz nagłówek zamówienia
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Anuluj
                </a>
            </div>
            <div class="alert alert-warning mt-3" role="alert">
                Uwaga: Pozycje zamówienia (produkty) należy dodać osobno w sekcji "Pozycje Zamówień".
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}