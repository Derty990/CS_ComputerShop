<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel Administratora - TechShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/intranet.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-white py-4 text-center">
                <i class="bi bi-gear-fill me-2"></i>
                Panel Administracyjny
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-house-door me-2"></i> Pulpit
                </a>
                <a asp-controller="Page" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-file-earmark-text me-2"></i> Strony
                </a>
                <a asp-controller="Topicality" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-newspaper me-2"></i> Aktualności
                </a>
                <div class="sidebar-heading text-white-50 pt-3 pb-2 px-3 small">PRODUKTY</div>
                <a asp-controller="ProductType" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-tags me-2"></i> Kategorie
                </a>
                <a asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-box me-2"></i> Produkty
                </a>
                <div class="sidebar-heading text-white-50 pt-3 pb-2 px-3 small">SPRZEDAŻ</div>
                <a asp-controller="Order" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-bag me-2"></i> Zamówienia
                </a>
                <a asp-controller="OrderItem" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-list-check me-2"></i> Pozycje zamówień
                </a>
                <a asp-controller="Cart" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-cart me-2"></i> Koszyki
                </a>
                <div class="sidebar-heading text-white-50 pt-3 pb-2 px-3 small">UŻYTKOWNICY</div>
                <a asp-controller="User" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-people me-2"></i> Użytkownicy
                </a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> Administrator
                                </a>
                                <div class="dropdown-menu dropdown-menu-end">
                                    <a class="dropdown-item" href="#">Profil</a>
                                    <a class="dropdown-item" href="#">Ustawienia</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Wyloguj</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <h1 class="mt-2 mb-4">@ViewData["Title"]</h1>
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center py-3">
            &copy; 2025 - TechShop Admin Panel - <a asp-controller="Home" asp-action="Privacy">Polityka prywatności</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/intranet.js" asp-append-version="true"></script>
    <script>
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>