@model IEnumerable<Firma.Data.Data.CMS.Topicality>

@{
    ViewData["Title"] = "Zarządzanie aktualnościami CMS";
}

<h1>@ViewData["Title"]</h1> @* Główny tytuł podstrony *@

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Lista aktualności</h6>
        <a asp-action="Create" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Dodaj nową aktualność
        </a>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info" role="alert">
                Brak zdefiniowanych aktualności. Kliknij przycisk "Dodaj nową aktualność", aby utworzyć pierwszą.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered">
                    @* Dodane table-striped i table-bordered *@
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TitleLink)</th>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.Position)</th>
                            <th width="150">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(p => p.Position)) @* Dodane sortowanie po pozycji *@
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TitleLink)</td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Position)</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        @* Jeśli Details niepotrzebne, to do usunięcia *@
                                        @*
                                        <a asp-action="Details" asp-route-id="@item.IdPage" class="btn btn-info" title="Szczegóły">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        *@
                                        <a asp-action="Edit" asp-route-id="@item.IdTopicality" class="btn btn-primary" title="Edytuj">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdTopicality" class="btn btn-danger" title="Usuń">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>