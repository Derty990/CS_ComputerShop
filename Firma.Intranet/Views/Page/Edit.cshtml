@using Firma.Data.Data.CMS
@model Firma.Data.Data.CMS.Page

@{
    ViewData["Title"] = "Edytuj stronę";
}

<h1>@ViewData["Title"]</h1>

<h4>Dane strony: @Model.Title</h4> @* Kontekst edytowanej strony *@
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPage" /> @* Kluczowe dla edycji *@

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="TitleLink" class="form-label"></label>
                        <input asp-for="TitleLink" class="form-control" />
                        <span asp-validation-for="TitleLink" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Contents" class="form-label"></label>
                <textarea asp-for="Contents" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Position" class="form-label"></label>
                <input asp-for="Position" class="form-control" type="number" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MenuPlacement" class="control-label"></label>
                <select asp-for="MenuPlacement" class="form-control"
                        asp-items="Html.GetEnumSelectList<PageMenuPlacement>()">
                    <option value="">-- Wybierz miejsce --</option>
                </select>
                <span asp-validation-for="MenuPlacement" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Zapisz zmiany
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Anuluj
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}