@model Firma.Data.Data.Shop.Product

@{
    ViewData["Title"] = "Dodaj nowy produkt"; // Zmieniony tytuł
}

<h1>@ViewData["Title"]</h1> @* Użycie ViewData dla tytułu *@

<h4>Dane produktu</h4> @* Bardziej przyjazny nagłórek *@
<hr />
<div class="row">
    <div class="col-md-8">
        @* Szersza kolumna dla formularza *@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Rozmieszczenie pól w dwóch kolumnach dla lepszego wyglądu *@
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        @* Bootstrap 5 margin bottom *@
                        <label asp-for="Code" class="form-label"></label> @* Bootstrap 5 form label *@
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" /> @* Lepsze pole dla ceny *@
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="IdProductType" class="form-label">Kategoria</label> @* Poprawiona etykieta *@
                        <select asp-for="IdProductType" class="form-select" asp-items="ViewBag.IdProductType">
                            @* Użyj form-select dla Bootstrap 5 *@
                            <option value="">-- Wybierz kategorię --</option> @* Opcjonalna pusta etykieta *@
                        </select>
                        <span asp-validation-for="IdProductType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="PhotoUrl" class="form-label">URL zdjęcia</label> @* Poprawiona etykieta *@
                <input asp-for="PhotoUrl" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea> @* Textarea dla opisu *@
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mt-4">
                @* Większy margines dla przycisków *@
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Utwórz
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Anuluj
                </a>
            </div>
        </form>
    </div>
</div>

@* Usunięty stary link "Back to List" *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}