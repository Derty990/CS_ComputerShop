@model IEnumerable<Firma.Data.Data.Customers.Order>

@{
    ViewData["Title"] = "Moje zamówienia";
}

<div class="container my-5">
    <h1>@ViewData["Title"]</h1>
    <p>Poniżej znajduje się lista wszystkich Twoich zamówień.</p>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Numer zamówienia</th>
                        <th>Data złożenia</th>
                        <th>Wartość</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>#@order.IdOrder</td>
                            <td>@order.OrderDate.ToString("d MMMM yyyy, HH:mm")</td>
                            <td>@order.TotalAmount.ToString("C")</td>
                            <td><span class="badge bg-primary">@order.Status</span></td>
                            <td class="text-end">
                                <a asp-action="OrderDetails" asp-route-id="@order.IdOrder" class="btn btn-sm btn-outline-secondary">
                                    Szczegóły
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4" role="alert">
            Nie złożyłeś jeszcze żadnych zamówień.
        </div>
    }
</div>