@model IEnumerable<Firma.Data.Data.CMS.Page>

<footer class="bg-dark text-white mt-auto pt-5">
    <div class="container py-4">
        <div class="row">

            @* --- KOLUMNA "O NAS" --- *@
            <div class="col-lg-3 col-md-6 mb-4">
                <h5>O nas</h5>
                <ul class="list-unstyled">
                    @* Filtruje cały model, wybierając tylko linki pasujące do tej kolumny *@
                    @foreach (var footerPage in Model
                    .Where(item =>
                    item.TitleLink.ToLower() == "vivitech" ||
                    item.TitleLink.ToLower() == "o firmie" ||
                    item.TitleLink.ToLower() == "nasz zespół" ||
                    item.TitleLink.ToLower() == "kariera"
                    )
                    .OrderBy(item => item.Position))
                    {
                        <li><a asp-controller="Home" asp-action="Index" asp-route-id="@footerPage.IdPage" class="text-white-50">@footerPage.TitleLink</a></li>
                    }
                </ul>
            </div>

            @* --- KOLUMNA "OBSŁUGA KLIENTA" --- *@
            <div class="col-lg-3 col-md-6 mb-4">
                <h5>Obsługa klienta</h5>
                <ul class="list-unstyled">
                    @foreach (var footerPage in Model
                    .Where(item =>
                    item.TitleLink.ToLower() == "kontakt" ||
                    item.TitleLink.ToLower() == "zwroty i reklamacje" ||
                    item.TitleLink.ToLower() == "pomoc"
                    )
                    .OrderBy(item => item.Position))
                    {
                        <li><a asp-controller="Home" asp-action="Index" asp-route-id="@footerPage.IdPage" class="text-white-50">@footerPage.TitleLink</a></li>
                    }
                </ul>
            </div>

            @* --- KOLUMNA "INFORMACJE" --- *@
            <div class="col-lg-3 col-md-6 mb-4">
                <h5>Informacje</h5>
                <ul class="list-unstyled">
                    @foreach (var footerPage in Model
                    .Where(item =>
                    item.TitleLink.ToLower() == "polityka prywatności" ||
                    item.TitleLink.ToLower() == "regulamin" ||
                    item.TitleLink.ToLower() == "dostawa"
                    )
                    .OrderBy(item => item.Position))
                    {
                        <li><a asp-controller="Home" asp-action="Index" asp-route-id="@footerPage.IdPage" class="text-white-50">@footerPage.TitleLink</a></li>
                    }
                </ul>
            </div>

            @* --- KOLUMNA NEWSLETTER (STATYCZNA) --- *@
            <div class="col-lg-3 col-md-6 mb-4">
                <h5>Newsletter</h5>
                <p class="text-white-50">Bądź na bieżąco z nowościami i promocjami</p>
                <form asp-controller="Newsletter" asp-action="Subscribe" method="post">
                    <div class="input-group mb-3">
                        <input type="email" name="email" class="form-control" placeholder="Twój email" required>
                        <button class="btn btn-primary" type="submit">Zapisz</button>
                    </div>
                </form>
                <div class="mt-3">
                    <a href="#" class="text-white me-2" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-white me-2" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="text-white me-2" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-white" aria-label="Youtube"><i class="bi bi-youtube"></i></a>
                </div>
            </div>
        </div>
        <hr class="mt-4">
        <div class="row">
            <div class="col-md-6">
                <p class="mb-0">&copy; @DateTime.Now.Year Vivitech - Wszelkie prawa zastrzeżone</p>
            </div>
        </div>
    </div>
</footer>