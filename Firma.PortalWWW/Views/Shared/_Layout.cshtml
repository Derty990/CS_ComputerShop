<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - vivitech - Twój sklep komputerowy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="bg-dark text-white py-2">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <small><i class="bi bi-telephone me-2"></i> +48 123 456 789</small>
                        <small class="ms-3"><i class="bi bi-envelope me-2"></i> kontakt@vivitech.pl</small>
                    </div>
                    <div class="col-md-6 text-end">
                        <small>
                            <a asp-controller="Account" asp-action="Login" class="text-white text-decoration-none">
                                <i class="bi bi-person me-1"></i> Zaloguj się
                            </a>
                        </small>
                        <small class="ms-3">
                            <a asp-controller="Account" asp-action="Register" class="text-white text-decoration-none">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Zarejestruj się
                            </a>
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="py-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-3 mb-3 mb-md-0">
                        <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                            <h1 class="m-0 text-primary"><i class="bi bi-cpu me-2"></i>Vivitech</h1>
                        </a>
                    </div>
                    <div class="col-md-6 mb-3 mb-md-0">
                        <form class="d-flex" asp-controller="Shop" asp-action="Index" method="get">
                            <input class="form-control me-2" type="search" name="searchString" placeholder="Czego szukasz?" aria-label="Szukaj" value="@ViewBag.CurrentSearch">
                            <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </div>
                    <div class="col-md-3 text-end">
                        <a asp-controller="Wishlist" asp-action="Index" class="btn btn-outline-dark position-relative me-2">
                            <i class="bi bi-heart"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                        </a>
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-primary position-relative">
                            <i class="bi bi-cart"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbarCollapse" aria-controls="mainNavbarCollapse"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="mainNavbarCollapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strona Główna</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Shop" asp-action="Index" asp-route-productTypeId="1">Podzespoły</a> @* Zastąp ID właściwym ID kategorii *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Shop" asp-action="Index" asp-route-productTypeId="2">Peryferia</a> @* Zastąp ID właściwym ID kategorii *@
                        </li>

                        @if (ViewBag.MainMenuPages != null)
                        {
                            @await Html.PartialAsync("_Odnosniki", (IEnumerable<Firma.Data.Data.CMS.Page>)ViewBag.MainMenuPages)
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Wszystko w Sklepie</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3 flex-shrink-0">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white mt-auto pt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>O nas</h5>
                    <ul class="list-unstyled">
                        @if (ViewBag.FooterMenuPages != null)
                        {
                            foreach (var footerItem in ((IEnumerable<Firma.Data.Data.CMS.Page>)ViewBag.FooterMenuPages)
                            .Where(item => item.TitleLink.ToLower() == "o firmie" || item.TitleLink.ToLower() == "nasz zespół" || item.TitleLink.ToLower() == "kariera")
                            .OrderBy(item => item.Position))
                            {
                                <li><a asp-controller="Home" asp-action="Index" asp-route-id="@footerItem.IdPage" class="text-white-50">@footerItem.TitleLink</a></li>
                            }
                        }
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Obsługa klienta</h5>
                    <ul class="list-unstyled">
                        @if (ViewBag.FooterMenuPages != null)
                        {
                            foreach (var footerItem in ((IEnumerable<Firma.Data.Data.CMS.Page>)ViewBag.FooterMenuPages)
                            .Where(item => item.TitleLink.ToLower() == "kontakt" || item.TitleLink.ToLower() == "zwroty i reklamacje" || item.TitleLink.ToLower() == "pomoc")
                            .OrderBy(item => item.Position))
                            {
                                <li><a asp-controller="Home" asp-action="Index" asp-route-id="@footerItem.IdPage" class="text-white-50">@footerItem.TitleLink</a></li>
                            }
                        }
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Informacje</h5>
                    <ul class="list-unstyled">
                        @if (ViewBag.FooterMenuPages != null)
                        {
                            var allFooterInfoItems = (IEnumerable<Firma.Data.Data.CMS.Page>)ViewBag.FooterMenuPages;
                            var privacyPolicyItem = allFooterInfoItems
                            .FirstOrDefault(item => item.TitleLink.ToLower() == "polityka prywatności");
                            if (privacyPolicyItem != null)
                            {
                                <li><a asp-controller="Home" asp-action="Index" asp-route-id="@privacyPolicyItem.IdPage" class="text-white-50">@privacyPolicyItem.TitleLink</a></li>
                            }
                            else
                            {
                                <li><a asp-controller="Home" asp-action="Privacy" class="text-white-50">Polityka prywatności</a></li>
                            }

                            foreach (var footerItem in allFooterInfoItems
                            .Where(item => item.TitleLink.ToLower() == "regulamin" || item.TitleLink.ToLower() == "dostawa")
                            .OrderBy(item => item.Position))
                            {
                                if (privacyPolicyItem == null || footerItem.IdPage != privacyPolicyItem.IdPage)
                                {
                                    <li><a asp-controller="Home" asp-action="Index" asp-route-id="@footerItem.IdPage" class="text-white-50">@footerItem.TitleLink</a></li>
                                }
                            }
                        }
                        else
                        {
                            <li><a asp-controller="Home" asp-action="Privacy" class="text-white-50">Polityka prywatności</a></li>
                        }
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Newsletter</h5>
                    <p class="text-white-50">Bądź na bieżąco z nowościami i promocjami</p>
                    <form asp-controller="Newsletter" asp-action="Subscribe" method="post">
                        <div class="input-group mb-3">
                            <input type="email" name="email" class="form-control" placeholder="Twój email" required>
                            <button class="btn btn-primary" type="submit">Zapisz</button>
                        </div>
                    </form>
                    <div class="mt-3">
                        <a href="#" class="text-white me-2" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white me-2" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white me-2" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white" aria-label="Youtube"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>
            <hr class="mt-4">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; @DateTime.Now.Year Vivitech - Wszelkie prawa zastrzeżone</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <img src="~/content/payment-methods.png" alt="Metody płatności" height="30">
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>