<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - vivitech - Twój sklep komputerowy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Top Bar -->
        <div class="bg-dark text-white py-2">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <small><i class="bi bi-telephone me-2"></i> +48 123 456 789</small>
                        <small class="ms-3"><i class="bi bi-envelope me-2"></i> kontakt@vivitech.pl</small>
                    </div>
                    <div class="col-md-6 text-end">
                        <small>
                            <a asp-controller="Account" asp-action="Login" class="text-white text-decoration-none">
                                <i class="bi bi-person me-1"></i> Zaloguj się
                            </a>
                        </small>
                        <small class="ms-3">
                            <a asp-controller="Account" asp-action="Register" class="text-white text-decoration-none">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Zarejestruj się
                            </a>
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Header with Logo and Search -->
        <div class="py-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-3 mb-3 mb-md-0">
                        <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                            <h1 class="m-0 text-primary"><i class="bi bi-cpu me-2"></i>Vivitech</h1>
                        </a>
                    </div>
                    <div class="col-md-6 mb-3 mb-md-0">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Czego szukasz?" aria-label="Szukaj">
                            <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </div>
                    <div class="col-md-3 text-end">
                        <a href="#" class="btn btn-outline-dark position-relative me-2">
                            <i class="bi bi-heart"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                        </a>
                        <a href="#" class="btn btn-primary position-relative">
                            <i class="bi bi-cart"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Shop" asp-action="Index">Sklep</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                Kategorie
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Komputery stacjonarne</a></li>
                                <li><a class="dropdown-item" href="#">Podzespoły komputerowe</a></li>
                                <li><a class="dropdown-item" href="#">Peryferia</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Artykuły</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Kontakt</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white mt-5 pt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-lg-3 mb-4">
                    <h5>O nas</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">O firmie</a></li>
                        <li><a href="#" class="text-white-50">Nasz zespół</a></li>
                        <li><a href="#" class="text-white-50">Kariera</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 mb-4">
                    <h5>Obsługa klienta</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">Kontakt</a></li>
                        <li><a href="#" class="text-white-50">Zwroty i reklamacje</a></li>
                        <li><a href="#" class="text-white-50">Pomoc</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 mb-4">
                    <h5>Informacje</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">Regulamin</a></li>
                        <li><a href="#" class="text-white-50">Polityka prywatności</a></li>
                        <li><a href="#" class="text-white-50">Dostawa</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 mb-4">
                    <h5>Newsletter</h5>
                    <p class="text-white-50">Bądź na bieżąco z nowościami i promocjami</p>
                    <form>
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Twój email">
                            <button class="btn btn-primary" type="button">Zapisz</button>
                        </div>
                    </form>
                    <div class="mt-3">
                        <a href="#" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white me-2"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white me-2"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>
            <hr class="mt-4">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 Vivitech - Wszelkie prawa zastrzeżone</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <img src="~/images/payment-methods.png" alt="Metody płatności" height="30">
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/portal.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>