@{
    ViewData["Title"] = "Strona główna";
}

<!-- Hero Banner -->
<div class="main-banner position-relative mb-5" style="background-image: url('https://via.placeholder.com/1920x400');">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-md-6">
                <div class="bg-white bg-opacity-75 p-4 rounded">
                    <h1 class="display-4 fw-bold">Najnowsze technologie</h1>
                    <p class="lead">Odkryj świat najnowszych rozwiązań technologicznych w jednym miejscu</p>
                    <a href="#" class="btn btn-primary btn-lg">Sprawdź ofertę</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Featured Categories -->
    <section class="mb-5">
        <h2 class="text-center mb-4">Kategorie produktów</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 text-center">
                    <img src="~/content/rtx-5090-zotac.jpg" class="card-img-top" alt="Podzespoły">
                    <div class="card-body">
                        <h5 class="card-title">Podzespoły</h5>
                        <p class="card-text">Karty graficzne, procesory, płyty główne i wiele więcej</p>
                        <a href="#" class="btn btn-outline-primary">Zobacz więcej</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 text-center">
                    <img src="~/content/DarkProjectNovusPro.jpg" class="card-img-top" alt="Peryferia">
                    <div class="card-body">
                        <h5 class="card-title">Peryferia</h5>
                        <p class="card-text">Monitory, klawiatury, myszki i inne akcesoria</p>
                        <a href="#" class="btn btn-outline-primary">Zobacz więcej</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Polecane produkty</h2>
            <a href="#" class="btn btn-outline-primary">Zobacz wszystkie</a>
        </div>
        <div class="row g-4">
            @for (int i = 1; i <= 4; i++)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="card product-card h-100">
                        <div class="position-absolute top-0 end-0 p-2">
                            <span class="badge bg-danger">-10%</span>
                        </div>
                        <img src="~/content/bequietLightBase900FXARGB.jpg" class="card-img-top" alt="Produkt @i">
                        <div class="card-body">
                            <h6 class="card-subtitle text-muted mb-1">Kategoria</h6>
                            <h5 class="card-title product-title">Przykładowy produkt @i z długą nazwą</h5>
                            <div class="d-flex align-items-center mb-2">
                                <span class="text-warning me-1">
                                    @for (int j = 0; j < 5; j++)
                                    {
                                        <i class="bi bi-star-fill small"></i>
                                    }
                                </span>
                                <small class="text-muted">(56)</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="text-danger fw-bold">@(1999 - i * 200) zł</span>
                                    <small class="text-muted text-decoration-line-through ms-2">@(2199 - i * 200) zł</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <div class="d-grid">
                                <button class="btn btn-primary">Dodaj do koszyka</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Recent Articles -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Najnowsze artykuły</h2>
            <a href="#" class="btn btn-outline-primary">Zobacz wszystkie</a>
        </div>
        <div class="row g-4">
            @for (int i = 1; i <= 3; i++)
            {
                <div class="col-md-4">
                    <div class="card blog-card h-100">
                        <img src="~/content/Liquid_Freezer_III_360_A-RGB__Black.jpg" class="card-img-top blog-image" alt="Artykuł @i">
                        <div class="card-body">
                            <div class="mb-2">
                                <span class="badge bg-info text-dark">Technologia</span>
                                <small class="text-muted ms-2">15 marca 2025</small>
                            </div>
                            <h5 class="card-title">Arctic Liquid Freezer III Pro – Nadchodzi nowe wydanie popularnego chłodzenia wodnego @i</h5>
                            <p class="card-text">Arctic, niemiecka firma znana z produkcji dobrej jakości i przystępnych cenowo komponentów PC, wprowadza na rynek nową serię chłodzeń wodnych – Arctic Liquid Freezer III Pro...</p>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a href="#" class="btn btn-outline-primary">Czytaj więcej</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Newsletter -->
    <section class="mb-5 py-4 bg-light rounded">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h3>Zapisz się do newslettera</h3>
                <p class="text-muted">Bądź na bieżąco z najnowszymi promocjami i nowościami w naszym sklepie</p>
                <div class="input-group mb-3 w-75 mx-auto">
                    <input type="email" class="form-control" placeholder="Twój adres email">
                    <button class="btn btn-primary" type="button">Zapisz się</button>
                </div>
                <small class="text-muted">Możesz zrezygnować w każdej chwili. Zapoznaj się z naszą <a href="#">polityką prywatności</a>.</small>
            </div>
        </div>
    </section>
</div>