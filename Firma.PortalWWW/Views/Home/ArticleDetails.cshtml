@{
}
@model Firma.Data.Data.CMS.Topicality

@{
    // ViewData["Title"] jest już ustawione w kontrolerze
}

<div class="container mt-4 mb-5">
    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
    {
        <img src="@Url.Content("~" + Model.PhotoUrl)" class="img-fluid rounded mb-3" alt="@Model.Title" style="max-height: 400px; width:100%; object-fit: cover;" />
    }
    <h1 class="display-4">@Model.Title</h1>
    <hr class="my-4" />
    <div class="lead">
        @Html.Raw(Model.Contents) @* Wyświetlenie pełnej treści artykułu *@
    </div>
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Powrót do strony głównej</a>
    </div>
</div>